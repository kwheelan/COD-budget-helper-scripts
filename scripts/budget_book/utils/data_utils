"""
Data utils for cleaning text and values in a dataframe
"""

import pandas as pd

import os

# File paths
DATA = 'input_data/model_copy'
file = os.listdir(DATA)[0]
filepath = os.path.join(DATA, file)

MODEL_DATA = [
    'Expenditures',
    'Revenue',
    'Positions',
    'FY24-FY25'
]

def read_model(filepath, sheet):
    tabs = pd.read_excel(filepath, sheet_name=[sheet], header=None)
    df = tabs[sheet]
    # then trim to table data
    df = df.iloc[11:22, 0:50]
    print(df)

read_model(filepath, MODEL_DATA[0])